{
  "name": "backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build:client": "rm -rf client/ && cd ../frontend && npm run build && cp -r ./dist ../backend/client",
    "build:server": "nest build",
    "prebuild:db": "docker compose up --build -d db",
    "build:db": "sleep 1 && npx prisma generate && npx prisma migrate dev",
    "prebuild:db-test": "docker compose up --build -d db-test",
    "build:db-test": "sleep 1 && npx prisma migrate dev",
    "prebuild:db-42": "docker compose up --build -d db-42",
    "build:db-42": "sleep 1 && npx prisma migrate dev --name build-42",
    "build": "npm run build:client && npm run build:server",
    "norm": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start  --watch",
    "start:debug": "nest start  --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "pretest:db": "docker compose up --build -d db-test",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./e2e/jest-e2e.json",
    "test:db": "sleep 1 && npx prisma migrate dev --name test && jest; docker compose down -v",
    "clean": "rm -rf dist",
    "fclean": "rm -rf dist && rm -rf node_modules",
    "down": "docker compose down -v"
  },
  "dependencies": {
    "@nestjs/axios": "^3.0.0",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.1",
    "@nestjs/passport": "^10.0.1",
    "@nestjs/platform-express": "^10.2.5",
    "@nestjs/platform-socket.io": "^10.1.0",
    "@nestjs/serve-static": "^4.0.0",
    "@nestjs/swagger": "^7.1.12",
    "@nestjs/websockets": "^10.1.0",
    "@prisma/client": "^5.5.2",
    "axios": "^1.4.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.6",
    "csrf-csrf": "^3.0.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.9.2",
    "otplib": "^12.0.1",
    "passport": "^0.6.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "qrcode": "^1.5.3",
    "reflect-metadata": "^0.1.13",
    "remove": "^0.1.5",
    "rxjs": "^7.8.1",
    "socket.io": "^4.7.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.6.1",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.1.3",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.4.5",
    "@types/passport-jwt": "^3.0.9",
    "@types/passport-local": "^1.0.35",
    "@types/qrcode": "^1.5.2",
    "@types/supertest": "^2.0.12",
    "@types/uuid": "^9.0.2",
    "@typescript-eslint/eslint-plugin": "^6.1.0",
    "@typescript-eslint/parser": "^6.1.0",
    "eslint": "^8.43.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.6.2",
    "jest-mock-extended": "^3.0.4",
    "prettier": "^2.8.8",
    "prisma": "^5.0.0",
    "socket.io-client": "^4.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.6"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "preset": "ts-jest",
    "coverageDirectory": "../coverage",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "diagnostics": false
        }
      ]
    }
  }
}
